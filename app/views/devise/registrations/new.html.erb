<html>
<head>
  <link rel="stylesheet" href="css/reset.css">
  <style>
    body { background: url('http://www.inha.ac.kr/user/plaza/k2board/235757/plaza1467814061774_b_img.jpg'); background-size:100%; background-repeat:no-repeat; }
    .wrapper { background-color:rgba(0,0,0,0.5);  width:400px; height: 290px; padding: 20px; margin: 13% auto; border-radius:10px; }
    .box {  margin: 7% auto; width: 400px; }
    .field { height: 50px; width: 325px; margin-bottom:5px; display:inline-block; margin-left:10px;}
    .field:after { content: ''; clear:both; margin: 0 auto;}
    .field input { width: 205px; height: 25px; border-radius: 5px; margin-bottom: 5px; }
    .field label { color: white; font-size:0.9em; margin-top:5px; font-weight: 300; width:50px; text-align:right; display:inline;}
    h2 { color: #69ca1b; font-weight: 500; margin-bottom:15px; font-size: 2em; margin:0px; margin-bottom: 15px; width: ; padding: 10px; border-radius:5px; z-index:5;}
    h2 span { color: #69ca1b; font-size: 0.6em; margin-left: 10px;}
    em { color: white; font-style:normal; font-size:0.7em; color:e9e9e9;}
    .actions input{ 
      background-color: #69ca1b; border:none; width:100px; height:50px; 
      margin-top: 20px; color: white; font-weight: 600; font-size:1.2em; border-radius:3px;
    }
    .actions { width: 100px; height: 60px; float:right; margin:0px; position:relative; top: -68px; right:55px;}
        .actions input{ 
          background-color: #69ca1b; border:none; width:100px; height:60px; 
          margin:0px; color: white; font-weight: 500; font-size:1.1em; border-radius:3px;
        }
        .actions input:active { color: grey; background-color: green;}
    a { display: none;}
    
    /**/
  </style>
</head>
  <body>
    <div class="wrapper">
        <h2>회원가입<span>Sign up</span></h2>
      <div class="box">
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
          
            <div class="field">
              <%= f.label :이메일 %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>
          
            <div class="field">
              <%= f.label :비밀번호%>
              <% if @minimum_password_length %>
              <em>( <%= @minimum_password_length %>자 이상 )</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          
            <div class="field">
              <%= f.label :비밀번호_재입력 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          
            <div class="actions">
              <%= f.submit "등록" %>
            </div>
          <% end %>
          
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </body>
  </html>